<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.MainWindowController">
    <top>
        <HBox prefHeight="40" style="-fx-background-color: #14165A; -fx-padding: 10;">
            <Button fx:id="menuButton" style="-fx-font-size: 20; -fx-background-color: transparent;" text="☰" textFill="WHITE">
            <font>
               <Font name="/fonts/Tilda Sans Bold" size="12.0" />
            </font></Button>
        </HBox>
    </top>

    <center>
        <StackPane style="-fx-background-color: #ecf0f1;">
            <Label style="-fx-font-size: 24;" text="ВСТРЕЧЕСЛАВ">
            <font>
               <Font name="/fonts/Tilda Sans Extra Bold" size="18.0" />
            </font></Label>

            <VBox fx:id="sideMenu" maxWidth="200" minWidth="0" prefWidth="200" style="-fx-background-color: #CDCEFF; -fx-padding: 20;" translateX="-200" StackPane.alignment="CENTER_LEFT">
                <Button maxWidth="Infinity" onAction="#handleMainClick" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-size: 14; -fx-alignment: center-left;" text="Главная">
               <font>
                  <Font name="Tilda Sans Medium" size="12.0" />
               </font></Button>
                <Button maxWidth="Infinity" onAction="#handleSavingsClick" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-size: 14; -fx-alignment: center-left;" text="Сохраненные файлы" />
                <Button maxWidth="Infinity" onAction="#handleEditClick" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-size: 14; -fx-alignment: center-left;" text="Обработать видео" />
                <Button maxWidth="Infinity" onAction="#handleExitClick" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-size: 14; -fx-alignment: center-left;" text="Выход" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>
